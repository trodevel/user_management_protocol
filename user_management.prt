############################################################

protocol user_management

############################################################

use basic_objects

############################################################

base_msg Request

base_msg_end

############################################################

#base_msg BackwardMessage: generic_protocol::BackwardMessage
base_msg BackwardMessage

base_msg_end

############################################################

enum gender_e

    UNDEF   = 0
    MALE    = 1
    FEMALE  = 2

enum_end

############################################################

obj UserInfo

    e gender_e      gender
    string          last_name
    string          first_name
    string          company_name
    string          email
    string          email_2
    string          phone
    string          phone_2
    string          timezone

obj_end

msg SetUserInfoRequest: Request

    uint32          user_id
    o UserInfo      user_info

msg_end

msg SetUserInfoResponse: BackwardMessage

msg_end

############################################################

msg    GetUserInfoRequest: Request

    uint32          user_id

msg_end

msg    GetUserInfoResponse: BackwardMessage

    uint32          user_id
    o gender_e      gender
    string          last_name
    string          first_name
    string          company_name
    string          email
    string          email_2
    string          phone
    string          phone_2
    string          timezone

msg_end

############################################################
