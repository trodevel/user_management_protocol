############################################################

protocol user_reg

############################################################

use basic_objects

############################################################

base_msg Request

base_msg_end

############################################################

#base_msg BackwardMessage: generic_protocol::BackwardMessage
base_msg BackwardMessage

base_msg_end

############################################################

enum gender_e

    UNDEF   = 0
    MALE    = 1
    FEMALE  = 2

enum_end

############################################################

obj User

    e gender_e              gender
    string                  name
    string                  first_name
    o basic_objects::Email  email
    string                  phone
    o basic_objects::Date   birthday

obj_end

############################################################

msg RegisterUserRequest: Request

    o User                 lead

msg_end

msg RegisterUserResponse: BackwardMessage

msg_end

############################################################

msg ConfirmRegistrationRequest: Request

    string                 registration_key

msg_end

msg ConfirmRegistrationResponse: BackwardMessage

msg_end

############################################################
